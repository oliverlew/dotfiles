# Keymappings
map [ navigate previous
map ] navigate next
map H jumplist backward
map L jumplist forward
map <PageUp> navigate previous
map <PageDown> navigate next
map [presentation] gg navigate first
map [presentation] G navigate last
map [presentation] k navigate previous
map [presentation] j navigate next
map [presentation] [ navigate previous
map [presentation] ] navigate next
map [fullscreen] [ navigate previous
map [fullscreen] ] navigate next
map [fullscreen] <Left> navigate previous
map [fullscreen] <Right> navigate next
# UI toggling
map b toggle_statusbar
map [fullscreen] b toggle_statusbar
map [presentation] b toggle_statusbar
# Mode changing
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen
map p toggle_presentation
map [presentation] p toggle_presentation

# Synctex
set synctex true
set synctex-editor-command "vim +%{line} %{input}"
# Do not raise window after forward search, from version 0.4.8
set dbus-raise-window false

# User interface
set guioptions "vh"
set highlight-transparency 0.2

# Colors TODO: all the colors
set default-fg "#ECEFF1"
set default-bg "#212121"
set statusbar-bg "#212121"
set statusbar-fg "#ECEFF1"
# Recolor
set recolor false
set recolor-keephue true
set recolor-reverse-video true
set recolor-darkcolor "#ECEFF1"
set recolor-lightcolor "#212121"

# Default
set adjust-open "width"

# window properties
set window-title-basename true
set window-title-page true
set window-icon-document false
