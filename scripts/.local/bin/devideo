#!/bin/sh
while getopts 2c:h arg; do
    case "$arg" in
        2) scale=2 ;;
        c) crf=$OPTARG ;;
        h|*) echo "$(basename "$0") [-2] [-c crf]" && exit;;
    esac
done
shift $((OPTIND - 1))

for v in "$@"; do
    ffmpeg -y -i "$v" -r 30 -crf "${crf:-24}" \
        -vf scale="trunc(iw/${scale:-1}/2)*2:trunc(ih/${scale:-1}/2)*2" \
        -pix_fmt yuv420p "${v%.*}-small.${v##*.}"
done
