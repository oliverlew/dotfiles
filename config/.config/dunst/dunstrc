[global]
# Display
monitor = 0
follow = mouse
# geometry
width = (0, 1024)
origin = top-right
offset = 24x72
# progress bar
progress_bar = false
# Separator height between notifications
separator_height = 4
# Vertical padding and horizontal padding
padding = 16
horizontal_padding = 16
frame_width = 4
frame_color = "#749cb3"
separator_color = frame

# Don't remove messages, if the user is idle for longer than idle_threshold seconds
idle_threshold = 120
# Font, This options is parsed as a Pango font description.
font = Monospace 12
# The format of the message.  Possible variables are:
#   %a  appname
#   %s  summary
#   %b  body
#   %p  progress value if set ([  0%] to [100%]) or nothing
#   %n  progress value if set without any extra characters
#   %%  Literal %
# Markup is allowed
format = "%a\n<b>%s</b> %p\n%b"

# Alignment of message text
# Possible values are "left", "center" and "right"
alignment = left

# Align icons left/right/off
icon_position = left

# The new icon settings
enable_recursive_icon_lookup = true
icon_theme = Papirus-Dark
icon_size = 64

### History ###
# Maximum amount of notifications kept in history
history_length = 200

### Misc/Advanced ###
# dmenu path
dmenu = rofi -dmenu -p dunst:
# Browser for opening urls in context menu
browser = /usr/bin/firefox -new-tab

# Defines action of mouse event
mouse_left_click = close_current
mouse_middle_click = close_all
mouse_right_click = do_action

[urgency_low]
background = "#212121"
foreground = "#888888"
timeout = 10

[urgency_normal]
background = "#212121"
foreground = "#ffffff"
timeout = 10

[urgency_critical]
background = "#ff5252"
foreground = "#ffffff"
frame_color = "#ff5252"
timeout = 0

# vim: ft=cfg
