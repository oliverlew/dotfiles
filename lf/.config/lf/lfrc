# UI options
set mouse
set nodrawbox
set icons
set nohidden
set info size
# set a large offset to center the cursor
set scrolloff 99
set errorfmt "\033[31m%s\033[0m"
set sixel

# pass arguments with delimiter '\n'
set ifs "\n"
set filesep "\n"
set previewer pv

# key mapping
map <esc> cmd-escape
map <c-y> up
map <c-e> down
map <m-up> up
map <m-down> down
map gh cd ~
map gr cd /
map D delete
map zp set preview!
# shell mappings
map <enter> $open $fx
map e $$EDITOR $fx
map M push $mkdir<space>
map R $bulk-rename
map t $tig -C $PWD
