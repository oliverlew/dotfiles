# GUI
no-keepaspect-window

slang=eng,chs

# auto deinterlacing since mpv v0.38.8
deinterlace=auto

# Screenshot
screenshot-format=png
screenshot-directory=~/Pictures
screenshot-template="mpv-%F-%P-%#n"

# OSD
osd-font="DejaVu Sans"
osd-color="#A0FFFFFF"
osd-border-color="#00FFFFFF"
osd-on-seek="msg-bar"
osd-shadow-color="#40000000"
osd-shadow-offset=0.5
osd-duration=3000

# osd in terminal
term-osd-bar=yes
term-osd-bar-chars="[=>-]"

# Hardware decoding, for my AMD graphics card and x11 desktop environment.
vo=gpu-next
hwdec=vaapi

# FFmpeg options
demuxer-lavf-o=protocol_whitelist=[crypto,http,https,tls,rtp,tcp,udp,httpproxy,file],allowed_extensions=ALL
